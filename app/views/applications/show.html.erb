<%= render "shared/navbar" %>

<div class="page-container" data-controller="status-button">
          <h1>Your application for <br><span class="flare"><%= @application.gallery.name %></span></h1>
    <!-- Image Gallery -->
    <div class="image-gallery">

      <div class="dashboard-details">

        <div class="card-product">
          <%= cl_image_tag @application.gallery.photos.first.key %>
          <div class="card-product-infos">
            <h2><%= @application.gallery.name %></h2>
            <p><%= @application.gallery.address %></p>
            <p><%= @application.gallery.website %></p>
          </div>
          <%= link_to "", gallery_path(@application.gallery), class:"button-dashboard-v2" %>
        </div>

        <div class="dashboard-information">
          <h2> Applicants name </h2>
          <div class="descriptions">
            <p> <%= @application.description %></p>
            <p> <i class="fa-solid fa-calendar-days"> </i> <%= @application.start_date %> - <%= @application.end_date %> </p>
            <%# <p> <%= @application.total.round %>
            <p data-status-button-target= "status"> <%= @application.status %> </p>
          </div>
        </div>

      </div>

      <div class="small-images">
        <% @application.photos.each do |photo| %>
          <%= cl_image_tag photo.key %>
        <%end%>

      </div>
    </div>

    <% if current_user.id = @application.gallery.user%>
     <% if @application.status == "pending" %>
      <div>

        <%= simple_form_for @application, data: { status_button_target: "acptbtn", action: "submit->status-button#accept" } do |f| %>
          <%= f.input :status, input_html: {value: 'accepted'}, as: :hidden %>
          <%= f.submit 'Accept' %>
        <% end %>

        <%= simple_form_for @application, data: { status_button_target: "rjctbtn", action: "submit->status-button#reject" } do |f| %>
          <%= f.input :status, input_html: {value: 'rejected'}, as: :hidden %>
          <%= f.submit 'Reject' %>
        <% end %>
        <%else%>
          <div></div>
          <%end%>

        </div>
      <% else %>
      <div>

      </div>
    <%end%>

</div>
