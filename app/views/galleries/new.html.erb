<div class="container">
  <div class="row">
    <!-- Form Column -->
    <div class="col-md-6">
      <h1>New Gallery</h1>
      <%= form_with(model: @gallery, local: true, class: "gallery-form") do |form| %>
        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :description %>
          <%= form.text_area :description, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :address %>
          <%= form.text_field :address, id: "gallery-address", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.submit 'Create Gallery', class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>

    <!-- Map Column -->
    <div class="col-md-6">
      <div id="map" class="map-container"></div>
    </div>
  </div>
</div>
